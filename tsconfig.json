{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "paths": {
      "@data/*": ["data/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"],
      "@presentation/*": ["presentation/*"]
    },
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "babel.config.js"]
}